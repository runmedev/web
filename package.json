  "type": "module",
  "workspaces": [
    "packages/react-components",
    "packages/react-console"
  ],
  "scripts": {
    "clean": "npm run clean -w packages/react-components && npm run clean -w packages/react-console",
    "build": "npm run clean && npm run build:console && npm run build:components && npm run build:app",
    "build:components": "cd packages/react-components && tsc -b && vite build",
    "build:app": "cd packages/react-components && tsc -b tsconfig.app.json && vite build -c vite.config.app.ts",
    "build:console": "cd packages/react-console && tsc -p tsconfig.json && vite build",
    "dev": "cd packages/react-components && vite -c vite.config.app.ts",
    "preview": "npm run build:app && cd packages/react-components && vite preview -c vite.config.app.ts",
    "lint": "eslint .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish"
  },
