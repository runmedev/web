  "scripts": {
    "clean": "pnpm --filter @runmedev/react-components run clean && pnpm --filter @runmedev/react-console run clean",
    "build": "pnpm run clean && pnpm run build:console && pnpm run build:components && pnpm run build:app",
    "build:components": "cd packages/react-components && tsc -b && vite build",
    "build:app": "cd packages/react-components && tsc -b tsconfig.app.json && vite build -c vite.config.app.ts",
    "build:console": "cd packages/react-console && tsc -p tsconfig.json && vite build",
    "dev": "cd packages/react-components && vite -c vite.config.app.ts",
    "preview": "pnpm run build:app && cd packages/react-components && vite preview -c vite.config.app.ts",
    "lint": "eslint .",
    "test": "pnpm --filter @runmedev/react-components run test && pnpm --filter @runmedev/react-console run test",
    "test:run": "pnpm --filter @runmedev/react-components run test:run && pnpm --filter @runmedev/react-console run test:run",
    "test:ui": "pnpm --filter @runmedev/react-components run test:ui",
    "test:coverage": "pnpm --filter @runmedev/react-components run test:coverage && pnpm --filter @runmedev/react-console run test:coverage",
